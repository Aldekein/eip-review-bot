{
    "extends": "@tsconfig/recommended/tsconfig.json",

    "compilerOptions": {
        "target": "es2021",
        "module": "es6",
        "rootDir": "./src",
        "strict": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist"
    },
    "include": ["src/**/*", "src/__tests__/**/*"],
    "exclude": ["node_modules"]
}
